{
    "name": "template-typescript-mvc-express",
    "version": "1.0.0",
    "description": "Template for a quick setup of a Restful API with preconfigured docker and swagger docs.",
    "main": "dist/server.js",
    "type": "commonjs",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix"
        ]
    },
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "lint": "npx eslint . --fix",
        "prepare": "husky install"
    },
    "keywords": [
        "template",
        "typescript",
        "ts",
        "express",
        "mvc",
        "rest",
        "api",
        "js",
        "javascript"
    ],
    "author": "mykyta.isikov@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "@types/express": "^5.0.0",
        "@types/node": "^22.7.4",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "eslint": "^9.11.1",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.7.0"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "pino": "^9.4.0",
        "pino-pretty": "^11.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.23.8"
    }
}
